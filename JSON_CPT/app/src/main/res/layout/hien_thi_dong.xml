<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp"
        android:text="Latitude"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textLatitude"
        android:layout_alignBottom="@+id/textLatitude"
        android:layout_centerHorizontal="true"
        android:text="Longitude"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textAltitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textLongitude"
        android:layout_alignBottom="@+id/textLongitude"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp"
        android:text="Altitude"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>